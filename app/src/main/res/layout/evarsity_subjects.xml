<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="1"
    android:stretchColumns="*">

    <TableRow>

        <com.webarch.srmobile.views.Text
            android:id="@+id/evarsity_subjects_code"
            android:layout_column="0"
            android:layout_margin="@dimen/border_2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_2" />

        <com.webarch.srmobile.views.Text
            android:id="@+id/evarsity_subjects_name"
            android:layout_column="1"
            android:layout_marginBottom="@dimen/border_2"
            android:layout_marginRight="@dimen/border_2"
            android:layout_marginTop="@dimen/border_2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_2" />

        <com.webarch.srmobile.views.Text
            android:id="@+id/evarsity_subjects_credit"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/border_2"
            android:layout_marginRight="@dimen/border_2"
            android:layout_marginTop="@dimen/border_2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_2" />

    </TableRow>

</TableLayout>