<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sub_child_fragment_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark">

        <com.webarch.srmobile.views.Text
            android:id="@+id/sub_child_fragment_title_bar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/border_2"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_2" />

        <com.webarch.srmobile.views.colorbuttons.ImageButton
            android:id="@+id/sub_child_fragment_title_bar_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_2"
            android:src="@drawable/sub_child_fragment_close"
            app:normal_color="@android:color/transparent"
            app:pressed_color="@color/normal" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sub_child_fragment_title_bar"
        android:background="@color/light"
        android:scaleType="fitXY"
        android:src="@drawable/oval_background" />

</RelativeLayout>