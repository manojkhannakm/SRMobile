<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/quick_access_pane_user_button_unknown_user_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/border_2"
        android:src="@drawable/quick_access_pane_user_button_unknown_user_picture" />

    <ImageView
        android:id="@+id/quick_access_pane_user_button_user_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/border_2"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/quick_access_pane_user_button_unknown_user_picture">

        <com.webarch.srmobile.views.Text
            android:id="@+id/quick_access_pane_user_button_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/quick_access_pane_user_button_sign_in"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_1" />

        <com.webarch.srmobile.views.Text
            android:id="@+id/quick_access_pane_user_button_signing_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/quick_access_pane_user_button_signing_in"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_1"
            android:visibility="invisible" />

        <com.webarch.srmobile.views.Text
            android:id="@+id/quick_access_pane_user_button_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_1"
            android:visibility="invisible" />

        <com.webarch.srmobile.views.Text
            android:id="@+id/quick_access_pane_user_button_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quick_access_pane_user_button_user_name"
            android:text="@string/quick_access_pane_user_button_sign_out"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_2"
            android:visibility="invisible" />

    </RelativeLayout>

</merge>